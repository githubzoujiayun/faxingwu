<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mainhead"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="附近的人"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_rightTop"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="5sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39sp"
            android:layout_margin="5sp"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_faxingshi"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="发型师"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_geren"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="个人用户"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_keys"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_margin="1sp"
                android:layout_weight="1"
                android:background="@drawable/shape_white"
                android:paddingLeft="5sp"
                android:textColor="@color/black2" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="70sp"
                android:layout_height="fill_parent"
                android:layout_margin="1sp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/my_zhoubianlistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@drawable/xian"
            android:dividerHeight="2px"
            android:focusable="false"
            android:fadingEdge="none"
            android:footerDividersEnabled="false" >
        </ListView>
    </LinearLayout>

</LinearLayout>