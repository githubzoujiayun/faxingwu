<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44sp"
            android:background="#212529" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="找  发  型"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/fl_duanfa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:gravity="center"
                            android:layout_gravity="bottom"
                            android:text="短发"
                            android:textColor="@color/black2"
                            android:background="@drawable/trans_bg"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_zhongfa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p2"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:text="中发"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/trans_bg"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/fl_changfa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p3"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/trans_bg"
                            android:text="长发"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_panfa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p4"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:background="@drawable/trans_bg"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom"
                            android:text="盘发"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/fl_nanfa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p5"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom"
                            android:text="男发"
                            android:background="@drawable/trans_bg"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_quanbu"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p6"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:text="全部"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/trans_bg"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/fl_shoucang"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p7"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:background="@drawable/trans_bg"
                            android:text="收藏"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:background="@drawable/p7"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/bottom" />

</LinearLayout>