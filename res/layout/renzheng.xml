<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mainhead"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="沙龙认证"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_rightTop"
            android:layout_width="58sp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5sp"
            android:background="@drawable/msg"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        
        <LinearLayout
            android:id="@+id/lin_hair_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="vertical" >

        
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:scaleType="fitXY"
                    android:text="沙龙名称:"
                    android:textColor="@color/black2"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tv_dname"
                    android:layout_width="wrap_content"
                    android:layout_height="37sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:paddingLeft="3sp"
                    android:scaleType="fitXY"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:scaleType="fitXY"
                    android:text="联系电话:"
                    android:textColor="@color/black2"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tv_dphone"
                    android:layout_width="wrap_content"
                    android:layout_height="37sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:paddingLeft="3sp"
                    android:scaleType="fitXY"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/iv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="5sp"
                    android:text="详细地址:"
                    android:textColor="@color/black2"
                    android:textSize="16dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120sp"
                    android:layout_margin="5sp"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/tv_daddress"
                        android:layout_width="fill_parent"
                        android:layout_height="120sp"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:paddingLeft="3sp"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/btn_getLocation"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5sp"
                        android:layout_marginRight="10sp"
                        android:visibility="gone"
                        android:background="@drawable/ditu" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp" >

                <Button
                    android:id="@+id/btn_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue"
                    android:scaleType="fitXY"
                    android:text="认  证  沙  龙"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>