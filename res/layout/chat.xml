<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mainhead"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="私信"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/msg"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>

    <ListView
        android:id="@+id/my_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="54sp"
        android:background="@drawable/pubcomment_bg"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_hairpic1"
            android:layout_width="47sp"
            android:layout_height="47sp"
            android:layout_marginLeft="3sp"
            android:scaleType="fitXY"
            android:src="@drawable/addphoto_green" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3sp"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:hint="请输入内容"
                android:padding="5sp" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="39sp"
                android:layout_height="39sp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/voice"
                android:scaleType="fitXY" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="50sp"
            android:layout_height="fill_parent"
            android:layout_margin="3sp"
            android:background="@drawable/shape_blue"
            android:text="发送"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>