<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mainhead"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:text="个人详情"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_rightTop"
            android:layout_width="74sp"
            android:layout_height="30sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/btn_long_selector"
            android:text="添加关注"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_loadhisinfo"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="#e8e7e7"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据加载中..." />
    </LinearLayout>

    <ScrollView
        android:id="@+id/lin_loadhisinfofinish"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="#e8e7e7"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="#e8e7e7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="90sp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/shape_white" >

                        <ImageView
                            android:id="@+id/iv_minfouserpic"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="1sp"
                            android:background="#ffffff"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10sp"
                            android:singleLine="true"
                            android:text="加载中..."
                            android:textColor="#ed145b"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10sp"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_shalongInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_white"
                    android:orientation="vertical"
                    android:padding="5sp"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_dname"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_dphone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地址:"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_daddress"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_yuanchuang"
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_marginTop="3sp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100sp"
                        android:background="@drawable/shape_white"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100sp"
                            android:layout_marginLeft="5sp"
                            android:gravity="center"
                            android:text="原创\n作品"
                            android:textColor="@color/black2"
                            android:textSize="18sp" />

                        <com.jm.view.HorizontalListView
                            android:id="@+id/yuanchuang_gallery"
                            android:layout_width="fill_parent"
                            android:layout_height="92sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:spacing="1px"
                            android:unselectedAlpha="1" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/lin_pingjia"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_rate_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/jiantou_go" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_huizuo"
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_marginTop="3sp"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100sp"
                        android:background="@drawable/shape_white"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100sp"
                            android:layout_marginLeft="5sp"
                            android:gravity="center"
                            android:text="报价\n发型"
                            android:textColor="@color/black2"
                            android:textSize="18sp" />

                        <com.jm.view.HorizontalListView
                            android:id="@+id/huizuo_gallery"
                            android:layout_width="fill_parent"
                            android:layout_height="92sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:spacing="1px"
                            android:unselectedAlpha="1" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/lin_collect"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:text="TA的收藏"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/jiantou_go" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_question"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:text="TA的提问"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="26sp"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/jiantou_go" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_white"
                    android:lineSpacingExtra="5sp"
                    android:padding="3sp"
                    android:textColor="@color/black2"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_yuyue"
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_red"
                    android:text="预约"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_sixin"
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_blue"
                    android:text="私信"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>