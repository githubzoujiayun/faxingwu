<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mainhead"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:text="个人详情"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_rightTop"
            android:layout_width="74sp"
            android:layout_height="30sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/btn_long_selector"
            android:text="添加关注"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="#e8e7e7" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="#e8e7e7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="90sp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/line" >

                        <ImageView
                            android:id="@+id/iv_minfouserpic"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="1sp"
                            android:background="#ffffff"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="fill_parent"
                            android:layout_height="40sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10sp"
                            android:singleLine="true"
                            android:text="加载中..."
                            android:textColor="#ed145b"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10sp"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_margin="5sp"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/lin_pingjia"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/shape_blue"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15sp"
                            android:gravity="center"
                            android:text="查看评价"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_rate_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3sp"
                            android:layout_marginRight="15sp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_sixin"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20sp"
                        android:background="@drawable/shape_green"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15sp"
                            android:gravity="center"
                            android:text="私信"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_marginLeft="3sp"
                            android:layout_marginRight="15sp"
                            android:src="@drawable/msg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_zuopinji"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="作品集"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_marginTop="3sp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100sp"
                        android:background="@color/imagelist_bg" >

                        <com.jm.view.HorizontalListView
                            android:id="@+id/his_gallery"
                            android:layout_width="fill_parent"
                            android:layout_height="92sp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/imagelist_bg"
                            android:spacing="1px"
                            android:unselectedAlpha="1" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="15sp"
                    android:lineSpacingExtra="5sp"
                    android:padding="5sp"
                    android:text="TA的简介:"
                    android:textColor="@color/black2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="fill_parent"
                    android:layout_height="70sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/line"
                    android:lineSpacingExtra="5sp"
                    android:padding="5sp"
                    android:textColor="@color/black2"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/lin_collect"
                    android:layout_width="fill_parent"
                    android:layout_height="45sp"
                    android:layout_marginBottom="3sp"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:text="TA的收藏"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_collect"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#d64e4e" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_shalongInfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:text="发型店名称："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_dname"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:text="电话号码："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_dphone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:text="详细地址:"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_daddress"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_collectlist"
                    android:layout_width="fill_parent"
                    android:layout_height="140sp"
                    android:layout_marginBottom="3sp"
                    android:layout_marginTop="5sp"
                    android:background="@color/bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp" >

                    <LinearLayout
                        android:id="@+id/lin_hair1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2sp"
                        android:layout_marginLeft="1sp"
                        android:layout_marginRight="1sp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/img_hair1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2sp"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="1sp"
                            android:layout_weight="1"
                            android:background="@color/bg"
                            android:padding="1sp"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_hair2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2sp"
                        android:layout_marginLeft="1sp"
                        android:layout_marginRight="1sp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/img_hair2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2sp"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="1sp"
                            android:layout_weight="1"
                            android:background="@color/bg"
                            android:padding="1sp"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_hair3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2sp"
                        android:layout_marginLeft="1sp"
                        android:layout_marginRight="1sp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/img_hair3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2sp"
                            android:layout_marginLeft="1sp"
                            android:layout_marginRight="1sp"
                            android:layout_weight="1"
                            android:background="@color/bg"
                            android:padding="1sp"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_hairinfo"
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:background="@drawable/line" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/trans_bg"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_btns"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_hisbtn"
                android:layout_width="150sp"
                android:layout_height="fill_parent"
                android:layout_margin="12sp"
                android:visibility="invisible"
                android:background="@drawable/btn_sixin"
                android:text="预约"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>