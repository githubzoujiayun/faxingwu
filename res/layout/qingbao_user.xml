<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_leftTop"
                android:layout_width="58sp"
                android:layout_height="30sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/btn_selector"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="行业情报"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_location"
                android:layout_width="58sp"
                android:layout_height="30sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/btn_selector"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39sp"
            android:layout_margin="5sp"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_quanbu"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="潮流学堂"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_tongcheng"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="洗护方法"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_tuijian"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="名人堂"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_guanzhu"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="品牌名店"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_faxingshi_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            
                android:divider="@color/white"
            android:dividerHeight="2px"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:numColumns="3" >
        </ListView>
    </LinearLayout>

</LinearLayout>