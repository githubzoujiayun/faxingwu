<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e7e7"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_rightTop"
            android:layout_width="78sp"
            android:layout_height="30sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/btn_long_selector"
            android:text="修改资料"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="#e8e7e7"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lin_setting"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="设置预约"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_changeinfo"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="修改资料"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_qq"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="绑定腾讯QQ"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="读取中..."
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sina"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="绑定新浪微博"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="读取中..."
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tips"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="推送设置"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_opinion"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="反馈建议"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_help"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:text="帮助信息"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="26sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/jiantou_go" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_clearCache"
                style="@style/WriteText"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/shape_green"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="清除缓存" >
            </Button>

            <Button
                android:id="@+id/btn_update"
                style="@style/WriteText"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="检查更新" >
            </Button>

            <Button
                android:id="@+id/btn_logout"
                style="@style/WriteText"
                android:layout_width="fill_parent"
                android:layout_height="45sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="退出登录" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>