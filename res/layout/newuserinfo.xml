<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e7e7"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_leftTop"
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/btn_selector"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_mainhead"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完善信息"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:layout_width="58sp"
            android:layout_height="30sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/btn_selector"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="#e8e7e7" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="#e8e7e7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="140sp"
                    android:layout_height="140sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/line"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_minfouserpic"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="1sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/addphoto" />

                    <ImageView
                        android:id="@+id/iv_lockwise1"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/counterclockwise"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/rg_type"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rb_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:checked="true"
                            android:text="普通用户"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb_haier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:text="发型师"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_nickname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:hint="输入您的中英文姓名或者艺名"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_shalonginfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/iv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:scaleType="fitXY"
                            android:text="店铺名称:"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/tv_dname"
                            android:layout_width="wrap_content"
                            android:layout_height="37sp"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:hint="请输入您所在店铺的名称"
                            android:nextFocusDown="@+id/tv_dphone"
                            android:paddingLeft="3sp"
                            android:scaleType="fitXY"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/iv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:scaleType="fitXY"
                            android:text="店铺电话:"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/tv_dphone"
                            android:layout_width="wrap_content"
                            android:layout_height="37sp"
                            android:layout_margin="5sp"
                            android:layout_weight="1"
                            android:hint="请输入您所在店铺的电话"
                            android:inputType="number"
                            android:nextFocusDown="@+id/tv_daddress"
                            android:paddingLeft="3sp"
                            android:scaleType="fitXY"
                            android:text=""
                            android:textSize="14sp" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/iv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="5sp"
                            android:text="详细地址:"
                            android:textColor="@color/black2"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="120sp"
                            android:layout_margin="5sp"
                            android:layout_weight="1" >

                            <EditText
                                android:id="@+id/tv_daddress"
                                android:layout_width="fill_parent"
                                android:layout_height="120sp"
                                android:layout_weight="1"
                                android:gravity="left|top"
                                android:hint="请输入您所在店铺的详细地址"
                                android:nextFocusDown="@+id/tv_city"
                                android:paddingLeft="3sp"
                                android:scaleType="fitXY"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/btn_getLocation"
                                android:layout_width="70sp"
                                android:layout_height="50sp"
                                android:layout_gravity="bottom|right"
                                android:layout_marginBottom="5sp"
                                android:layout_marginRight="10sp"
                                android:background="@drawable/ditu" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/city_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在城市："
                            android:textColor="@color/black"
                            android:textSize="14sp" >
                        </TextView>

                        <EditText
                            android:id="@+id/tv_city"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="请选择您当前所在城市"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码:"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_mobile"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1"
                            android:hint="请输入您的手机号码"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Q Q 号码:"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_qq"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1"
                            android:hint="请输入您的QQ号码"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_rightTop"
                    android:layout_width="fill_parent"
                    android:layout_height="37sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/shape_blue"
                    android:text="完 善 信 息"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>