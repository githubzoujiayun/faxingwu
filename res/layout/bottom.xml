<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="54sp"
    android:background="@drawable/bg_bottom"
    android:gravity="center_vertical|center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lin_zhaofaxing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/right"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_zhaofaxing"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/zhaofaxing"
            android:focusable="false"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/tv_zhaofaxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="找发型"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_faxingshi"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/both"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_faxingshi"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/faxingshi"
            android:focusable="false"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/tv_faxingshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="发型师"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_guangchang"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/both"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_guangchang"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/guangchang"
            android:focusable="false"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/tv_guangchang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="广场"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_wode"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/left"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_wode"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/wode"
            android:focusable="false"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/tv_wode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>