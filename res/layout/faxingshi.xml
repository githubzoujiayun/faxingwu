<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44sp"
        android:background="#212529"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_leftTop"
                android:layout_width="58sp"
                android:layout_height="30sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/btn_selector"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发  型  师"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_location"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/btn_selector"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="定位"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_quanbu"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@drawable/left_bg"
                android:gravity="center"
                android:text="全部"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_tongcheng"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@drawable/center_bg"
                android:gravity="center"
                android:text="同城"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_tuijian"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@drawable/center_bg"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_guanzhu"
                android:layout_width="fill_parent"
                android:layout_height="39sp"
                android:layout_weight="1"
                android:background="@drawable/right_bg"
                android:gravity="center"
                android:text="关注"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_faxingshi_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@drawable/xian"
            android:dividerHeight="2px"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:numColumns="3" >
        </ListView>
    </LinearLayout>

    <include layout="@layout/bottom" />

</LinearLayout>